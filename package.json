{
  "name": "generative-agents",
  "version": "2.0.0",
  "description": "Generative Agents: Interactive Simulacra of Human Behavior - Node.js/Bun.js Port",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/backend/reverie.ts",
    "dev:frontend": "bun run src/frontend/server.ts",
    "build": "bun build src/backend/reverie.ts --outdir dist --target bun",
    "start": "bun run src/backend/reverie.ts",
    "start:frontend": "bun run src/frontend/server.ts",
    "demo:vision": "npx tsx examples/vision-demo.ts",
    "demo:simulation": "npx tsx examples/simple-simulation.ts",
    "demo:modern-llm": "npx tsx examples/modern-llm-demo.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "generative-agents",
    "ai",
    "simulation",
    "llm",
    "openrouter"
  ],
  "author": "Original: Joon Sung Park, Port: Node.js Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.30",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "bun-types": "^1.0.26",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}
